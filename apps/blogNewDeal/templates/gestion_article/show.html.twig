{% extends 'base.html.twig' %}

{% block title %}Hello GestionArticleController!{% endblock %}

{% block body %}
<!-- Page Header -->
<header class="masthead" style="background-image: url('{{ asset('public/uploadImg/' ~ article.pathImg)}}')">
        <div class="overlay"></div>
        <div class="container">
        <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                <h1>{{ article.titre }}</h1>
                </div>
                </div>
        </div>
        </div>
</header>

<div class="container">
        <div class="row">
                <div class="col-lg-12 col-md-10 mx-auto">
                        <p>{{ article.contenu }}</p>
                </div>
        </div>
</div>
{% endblock %}
