{% extends 'base.html.twig' %}

{% block title %}Modifier un article{% endblock %}

{% block body %}
    <header class="masthead" style="background-image: url('{{ asset('public/img/home-bg.jpg')}}')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="site-heading">
                        <h1>Modification d'un article</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="row">
                <div class="col-lg-12 col-md-10 mx-auto">
                    <h3>Formulaire de modification d'un article</h3>
                </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-10 mx-auto">
                <form method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        {{ form_label(form.titre , 'Titre') }}
                        {{ form_widget(form.titre) }}
                    </div>
                    <div class="form-group">
                        <label for="pathImg" class="required">Image d'illustration</label>
                        <div class="custom-file"><input type="file" id="pathImg" name="pathImg" accept="image/*" class="custom-file-input"><label for="pathImg" class="custom-file-label">{{ article.pathImg }}</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <img id='img-upload' src="{{ asset('public/uploadImg/' ~ article.pathImg) }}"/>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.contenu , 'Contenu') }}
                        {{ form_widget(form.contenu, {'attr': {'style':"height:500px;"} }) }}
                    </div>
                    <div class="form-groupe">
                        <button type="submit" class="btn btn-success btn-block">Modifier l'article</button>
                    </div>
                    {{ form_row(form._token) }}
                </form>
            </div>
        </div>
</div>

{{ block("scriptFormArticle", "gestion_article/ajoutArticle.html.twig") }}

{% endblock %}